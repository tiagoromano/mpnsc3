{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "es6",
    "target": "es6",
    "baseUrl": "src",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "lib": [
      "dom",
      "es6"
    ]
  }
}
